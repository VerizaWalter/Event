<div class="container" >
     <div class="row">
         <div class="col-md-8 mx-auto mt-5">
         <%= form_tag url_for(action: "update"), method: "put" do |f| %>
       <%= label_tag 'First name' %>
       <%= text_field_tag 'first_name', current_user.first_name, class: 'form-control'%>
       <%= label_tag 'Last name' %>
       <%= text_field_tag 'last_name', current_user.last_name, class: 'form-control'%>
       <%= label_tag 'Description' %>
       <%= text_field_tag 'description', current_user.last_name, class: 'form-control'%>
       <%= label_tag 'email' %>
       <%= text_field_tag 'email', current_user.email, class: 'form-control'%>
       <br/>
       <%= submit_tag "Modify profil", class: 'btn btn-lg btn-primary btn-block' %>
     <% end %>
         </div>
     </div>
 </div>
